          (avatar "You")
          (box :col :fill :gap 12
            (input :type textarea :placeholder "What's on your mind?" :fill)
            ; Media attachments
            (box :row :gap 12
              (icon "image")
              (icon "video")
              (icon "map-pin")
              (icon "at-sign")))))))

