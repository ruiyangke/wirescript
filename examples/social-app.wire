; Social App - Social media feed showcasing:
; - Stories with ring indicators
; - Rich post cards with images and reactions
; - Compose post modal
; - Profile screen with tabs
; - Explore/search screen
; - Notifications with activity types
; - Direct messages
; - Bottom navigation with active states

(wire
  (meta
    :title "Social Feed"
    :context social
    :audience "users"
    :goal "connect and share with friends")

  ; Reusable Components
  (define story-avatar (name has-story is-add)
    (box :col :center :gap 4
      (box :relative
        (avatar $name)
        (badge "" :primary :absolute))
      (text $name :low)))

  (define post-card (author handle time content image-desc likes comments shares saved)
    (card :col :gap 0
      ; Post header
      (box :row :between :padding 16
        (box :row :gap 12
          (avatar $author)
          (box :col :gap 2
            (box :row :gap 8
              (text $author :medium)
              (badge "Following" :ghost))
            (text $handle :low)))
        (dropdown
          (button "Save Post" :ghost :full :icon "bookmark")
          (button "Copy Link" :ghost :full :icon "link")
          (button "Unfollow" :ghost :full :icon "user-minus")
          (divider)
          (button "Report" :danger :ghost :full :icon "flag")))
      ; Post content
      (box :col :gap 12 :padding 16
        (text $content))
      ; Post image (optional)
      (image $image-desc :height "300px")
      ; Reactions bar
      (box :col :gap 12 :padding 16
        (box :row :between
          (box :row :gap 20
            (box :row :gap 8
              (icon "heart")
              (text $likes :low))
            (box :row :gap 8
              (icon "message-circle")
              (text $comments :low))
            (box :row :gap 8
              (icon "share-2")
              (text $shares :low)))
          (icon "bookmark"))
        ; Liked by
        (box :row :gap 8
          (avatar "User 1")
          (avatar "User 2")
          (text "Liked by user1 and 41 others" :low)))))

  (define simple-post (author handle time content likes comments)
    (card :col :gap 0
      (box :row :between :padding 16
        (box :row :gap 12
          (avatar $author)
          (box :col :gap 2
            (text $author :medium)
            (text $handle :low)))
        (icon "ellipsis"))
      (box :col :gap 12 :padding 16
        (text $content))
      (box :row :gap 20 :padding 16
        (box :row :gap 8
          (icon "heart")
          (text $likes :low))
        (box :row :gap 8
          (icon "message-circle")
          (text $comments :low))
        (icon "share-2")
        (box :fill)
        (icon "bookmark"))))

  (define notification-item (avatar-name action target time icon-name)
    (box :row :gap 12 :padding 16
      (avatar $avatar-name)
      (box :col :fill :gap 4
        (box :row :gap 4
          (text $avatar-name :medium)
          (text $action :low)
          (text $target :medium))
        (text $time :low))
      (icon $icon-name)))

  (define message-preview (name message time unread)
    (box :row :gap 12 :padding 16
      (avatar $name)
      (box :col :fill :gap 4
        (box :row :between
          (text $name :medium)
          (text $time :low))
        (text $message :low))
      (badge $unread :primary)))

  ; Main Feed Screen
  (screen feed "Feed" :mobile
    (box :col :full
      ; Header
      (header :row :between :padding 16
        (text "SocialApp" :high)
        (box :row :gap 16
          (button :icon :ghost :icon "plus" :to "#compose")
          (box :relative
            (button "Alerts" :ghost :to "notifications")
            (badge "3" :danger :absolute))
          (button "DM" :ghost :to "messages")))

      (scroll :col :full :gap 0
        ; Stories Section
        (box :col :gap 12 :padding 16
          (text "Stories" :medium)
          (scroll :row :gap 16
            ; Add story
            (box :col :center :gap 4
              (box :relative
                (avatar "You" )
                (badge "+" :primary :absolute))
              (text "Add Story" :low))
            ; Friend stories
            (box :col :center :gap 4
              (box :relative
                (avatar "Alice" )
                (badge "" :success :absolute))
              (text "Alice" :low))
            (box :col :center :gap 4
              (box :relative
                (avatar "Bob" )
                (badge "" :success :absolute))
              (text "Bob" :low))
            (box :col :center :gap 4
              (box :relative
                (avatar "Carol" )
                (badge "" :success :absolute))
              (text "Carol" :low))
            (box :col :center :gap 4
              (box :relative
                (avatar "David" )
                (badge "" :success :absolute))
              (text "David" :low))
            (box :col :center :gap 4
              (avatar "Emma" )
              (text "Emma" :low))))

        (divider)

        ; Posts Feed
        (box :col :gap 16 :padding 16
          ; Post with image
          (post-card
            :author "Alice Chen"
            :handle "@alicechen"
            :time "2h"
            :content "Just shipped a new feature! The team worked so hard on this. So proud of everyone involved."
            :image-desc "Team celebration photo"
            :likes "142"
            :comments "28"
            :shares "12"
            :saved false)

          ; Text-only post
          (simple-post
            :author "Bob Smith"
            :handle "@bobsmith"
            :time "5h"
            :content "Beautiful sunset at the beach today. Nature always reminds me to slow down and appreciate the moment. What's your favorite way to unwind?"
            :likes "89"
            :comments "15")

          ; Another post with image
          (post-card
            :author "Carol Davis"
            :handle "@caroldavis"
            :time "8h"
            :content "Started learning Rust this week. The borrow checker is... interesting. Any tips from experienced Rustaceans?"
            :image-desc "Code editor screenshot"
            :likes "67"
            :comments "43"
            :shares "8"
            :saved false)

          ; Thread/reply
          (card :col :gap 0
            (box :row :between :padding 16
              (box :row :gap 12
                (avatar "David Kim")
                (box :col :gap 2
                  (text "David Kim" :medium)
                  (text "@davidkim" :low)))
              (icon "ellipsis"))
            (box :col :gap 8 :padding 16
              (text "Hot take: Tailwind CSS is just inline styles with extra steps" :medium)
              (text "Thread 1/5" :primary))
            (box :row :gap 20 :padding 16
              (box :row :gap 8
                (icon "heart")
                (text "1.2K" :low))
              (box :row :gap 8
                (icon "message-circle")
                (text "342" :low))
              (box :row :gap 8
                (icon "repeat")
                (text "89" :low))
              (box :fill)
              (icon "bookmark")))))

      ; Bottom Navigation
      (nav :row :around :padding 12 :sticky :bottom 0
        (box :col :center :gap 4 :active
          (icon "house")
          (text "Home" :low))
        (box :col :center :gap 4 :to "explore"
          (icon "search")
          (text "Explore" :low))
        (box :col :center :gap 4 :to "#compose"
          (icon "square-plus")
          (text "Post" :low))
        (box :col :center :gap 4 :to "notifications"
          (icon "heart")
          (text "Activity" :low))
        (box :col :center :gap 4 :to "profile"
          (icon "user")
          (text "Profile" :low))))

    ; Compose Post Modal
