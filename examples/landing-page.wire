      (header :row :between :padding 16
        (box :row :gap 8
          (icon "zap")
          (text "DevPlatform" :high))
        (button "Menu" :ghost :to "#mobile-menu"))

      (scroll :col :full
        ; Mobile Hero
        (section "hero" :col :center :gap 24 :padding 32
          (badge "New: AI Code Reviews" :primary)
          (text "Ship Code 10x Faster" :high :center)
          (text "The modern developer platform that scales with your team" :low :center)
          (box :col :gap 12 :full
            (button "Start Free Trial" :primary :full)
            (button "Watch Demo" :ghost :full)))

        ; Trust Logos
        (box :col :center :gap 12 :padding 24
          (text "Trusted by developers at" :low)
          (scroll :row :gap 24
            (text "Google" :medium)
            (text "Meta" :medium)
            (text "Amazon" :medium)))

        (divider)

        ; Mobile Features
        (section "features" :col :gap 24 :padding 24
          (text "Features" :high :center)
          (box :col :gap 16
            (card :row :gap 16 :padding 16
              (icon "zap")
              (box :col :gap 4
                (text "Lightning Fast" :medium)
                (text "90% faster builds" :low)))
            (card :row :gap 16 :padding 16
              (icon "shield")
              (box :col :gap 4
                (text "Secure" :medium)
                (text "SOC2 certified" :low)))
            (card :row :gap 16 :padding 16
              (icon "users")
              (box :col :gap 4
                (text "Team Ready" :medium)
                (text "Built for collaboration" :low)))
            (card :row :gap 16 :padding 16
              (icon "globe")
              (box :col :gap 4
                (text "Global CDN" :medium)
                (text "200+ edge locations" :low)))))

        (divider)

        ; Mobile Testimonial
        (section "testimonial" :col :gap 16 :padding 24
