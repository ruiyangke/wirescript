{
  "name": "@wirescript/viewer",
  "version": "0.0.1",
  "private": true,
  "description": "Desktop viewer for WireScript wireframes (Electron)",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ruiyang Ke",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:web": "vite --config vite.web.config.ts",
    "dev:electron": "VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "electron-vite build",
    "build:web": "tsc && vite build --config vite.web.config.ts",
    "preview": "electron-vite preview",
    "preview:web": "vite preview --config vite.web.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "package": "electron-builder"
  },
  "dependencies": {
    "@wirescript/dsl": "workspace:*",
    "@wirescript/editor": "workspace:*",
    "@wirescript/renderer": "workspace:*",
    "html-to-image": "^1.11.0",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.wirescript.viewer",
    "productName": "WireScript",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
