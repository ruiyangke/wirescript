{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [["(", ")"]],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_-]*",
  "indentationRules": {
    "increaseIndentPattern": "^.*\\((?!.*\\)).*$",
    "decreaseIndentPattern": "^\\s*\\).*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*\\(",
      "end": "^\\s*\\)"
    }
  }
}
