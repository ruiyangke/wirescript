{
  "name": "@wirescript/docs",
  "version": "0.0.1",
  "private": true,
  "description": "Documentation website for WireScript",
  "license": "Apache-2.0",
  "author": "Ruiyang Ke",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "serve out",
    "test": "vitest run",
    "test:watch": "vitest",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "biome check",
    "format": "biome format --write",
    "deploy": "next build && wrangler pages deploy out",
    "deploy:preview": "next build && wrangler pages deploy out --branch preview"
  },
  "dependencies": {
    "@fumadocs/ui": "^16.4.4",
    "@orama/orama": "^3.1.18",
    "@wirescript/dsl": "workspace:*",
    "@wirescript/renderer": "workspace:*",
    "fumadocs-core": "16.4.4",
    "fumadocs-mdx": "14.2.4",
    "fumadocs-ui": "16.4.4",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "catalog:",
    "react-dom": "catalog:",
    "shiki": "^3.21.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.14.1"
  }
}
