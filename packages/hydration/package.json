    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@wirescript/dsl": "workspace:*",
    "@wirescript/renderer": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "react": "catalog:",
