{
  "name": "@wirescript/hydration",
  "version": "0.0.1",
  "description": "Client-side hydration for WireScript wireframes",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ruiyang Ke",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruiyangke/wirescript.git",
    "directory": "packages/hydration"
  },
  "homepage": "https://wirescript.dev",
  "bugs": {
    "url": "https://github.com/ruiyangke/wirescript/issues"
  },
  "keywords": [
    "wirescript",
    "wireframe",
    "hydration",
    "react",
    "ui-design"
