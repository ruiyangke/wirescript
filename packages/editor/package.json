{
  "name": "@wirescript/editor",
  "version": "0.0.2",
  "description": "CodeMirror 6 editor for WireScript with syntax highlighting and autocompletion",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ruiyang Ke",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruiyangke/wirescript.git",
    "directory": "packages/editor"
  },
  "homepage": "https://wirescript.dev",
  "bugs": {
    "url": "https://github.com/ruiyangke/wirescript/issues"
  },
  "keywords": [
    "wirescript",
    "wireframe",
    "codemirror",
    "editor",
    "syntax-highlighting",
    "ui-design"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:grammar && tsc",
    "build:grammar": "lezer-generator src/language/wirescript.grammar -o src/language/parser.ts && node -e \"const fs=require('fs');const f='src/language/parser.ts';fs.writeFileSync(f,'// @ts-nocheck\\n'+fs.readFileSync(f))\"",
    "dev": "tsc --watch",
    "test": "echo 'No tests yet'",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/language": "^6.11.0",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.10",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@lezer/common": "^1.2.3",
    "@lezer/highlight": "^1.2.1",
    "@lezer/lr": "^1.4.2",
    "@wirescript/dsl": "workspace:*"
  },
  "devDependencies": {
    "@lezer/generator": "^1.7.2",
    "@types/react": "catalog:",
    "react": "catalog:",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  }
}
