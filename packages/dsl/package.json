{
  "name": "@wirescript/dsl",
  "version": "0.0.2",
  "description": "Parser and compiler for WireScript, a Lisp-like DSL for wireframes",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ruiyang Ke",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruiyangke/wirescript.git",
    "directory": "packages/dsl"
  },
  "homepage": "https://wirescript.dev",
  "bugs": {
    "url": "https://github.com/ruiyangke/wirescript/issues"
  },
  "keywords": [
    "wirescript",
    "wireframe",
    "dsl",
    "parser",
    "s-expression",
    "ui-design"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas.json": "./dist/schemas.json",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run generate:schemas",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "generate:schemas": "npx tsx scripts/generate-schemas.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
